{{> navbar}}

<div class="container-fluid bg-container"></div>

    <div class="offers-cover">
        
        <h1>Find your place</h1>
        <p>Now it's time to apply to the jobs you want with just one click!</p>

    </div>
</div>

<div class="layout-margin">

  <div>
    <form action="/offers" method="GET" class="style-search">
      <input type="text" name="offersSearch" placeholder='What are you looking for?' />
      <button type="submit">Find</button>
    </form>
  </div>

  <div class="card-group">
      <div class="row justify-content-between">
      {{#each offers as |offer|}}
          <div class="card col-3 m-1">
            <img src="{{offer.image}}" class="card-img-top" />
            <div class="card-body h-100">
              <div>
                <a class="btn btn-link" href="/offers/{{offer._id}}">
                  {{offer.title}}
                </a>
                <p style="white-space: pre-line;">{{offer.description}}</p>
              </div>

              <div>
                <img
                  class="rounded-circle shadow"
                  src="{{offer.author.image}}"
                  width="20"
                />
                <a class="btn btn-link" href="/professionals/{{offer.author._id}}">
                  {{offer.author.fullName}}
                </a>
              </div>
            </div>
          </div>
        </a>
      {{/each}}
    </div>

  </div>
</div>