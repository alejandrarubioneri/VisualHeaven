<h1>Register here</h1>

<form action="/register" method="POST" enctype="multipart/form-data" >
  <div class="mb-3">
    <label for="email" class="form-label">Email address</label>
    <input name="email" value="{{user.email}}" type="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" id="email" required>
    {{#if errors.email}}
      <div class="invalid-feedback">
        {{errors.email}}
      </div>
    {{/if}}
  </div>
    <div class="mb-3">
    <label for="fullName" class="form-label">Full name</label>
    <input name="fullName" value="{{user.fullName}}" type="text" class="form-control {{#if errors.fullName}}is-invalid{{/if}}" id="fullName" required>
    {{#if errors.fullName}}
      <div class="invalid-feedback">
        {{errors.fullName}}
      </div>
    {{/if}}
  </div>
  <div class="mb-3">
    <label for="occupation" class="form-label">Occupation</label>
      <select name="jobs" id="job-select">
        <option value="">Choose your ocuppation</option>
        <option value="production">Production</option>
        <option value="direction">Direction</option>
        <option value="sound">Sound</option>
        <option value="costume-and-makeup">Costume and makeup</option>
        <option value="postproduction">Postproduction</option>
      </select>
  </div>
  <div class="mb-3">
    <label for="formFile" class="form-label">Select a file</label>
    <input name="image" type="file" id="formFile" class="form-control" >
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input name="password" type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="password" required>
    {{#if errors.password}}
      <div class="invalid-feedback">
        {{errors.password}}
      </div>
    {{/if}}
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>