<img src="../images/nav-background.png" class="professional-nav">
{{> navbar}}




<div class="layout-margin-p">
    <div class="profile">
    {{#if professional.image}}
      <img class="rounded-circle shadow" src="{{professional.image}}" alt="{{professional.fullName}}">
    {{/if}}

    <h1 class="mt-3">{{professional.fullName}}</h1>
    <p><strong>&#x2709;</strong> {{professional.email}}</p>
    <p class="bio">{{currentUser.biography}}</p>

    <div class="occupation" style="
    background-color: #0000000a;
    border-radius: 37px;">
    {{#each professional.occupation as |occupation|}}
      <p>{{occupation}}</p>
    {{/each}}
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-2 g-4 mt-4 mb-4">
  {{#each offers as |offer|}}
      {{> offerCard offer}}
  {{/each}}
  </div> 
</div>
